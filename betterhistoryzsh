# === Historique enrichi Zsh (.zsh_history), sans polluer l'interactif ===

export HISTFILE="$HOME/.zsh_history"
export HISTSIZE=10000
export SAVEHIST=20000

setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY
setopt EXTENDED_HISTORY
setopt HIST_IGNORE_SPACE
unsetopt HIST_IGNORE_ALL_DUPS

# Variables de session
zsh_last_command=""
zsh_last_context=""
zsh_last_exit_code=0

# Contexte : distrobox ou host
zsh_context() {
  if [[ -n "$CONTAINER_ID" ]]; then
    [[ "$CONTAINER_ID" == "host" ]] && echo "host-distro" || echo "$CONTAINER_ID"
  else
    echo "host"
  fi
}

# Capture de la commande juste avant exÃ©cution
preexec() {
  zsh_last_command="$1"
}

# Ajout manuel enrichi dans le fichier
precmd() {
  local CONTEXT=$(zsh_context)
  local TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')
  local EXIT_CODE=$?

  # Si changement de contexte
  if [[ "$CONTEXT" != "$zsh_last_context" ]]; then
    print -r -- "# $CONTEXT" >> "$HISTFILE"
    zsh_last_context="$CONTEXT"
  fi

  if [[ -n "$zsh_last_command" ]]; then
    print -r -- "# $TIMESTAMP (exit=$EXIT_CODE)" >> "$HISTFILE"
    print -r -- "$zsh_last_command" >> "$HISTFILE"
  fi

  unset zsh_last_command
}